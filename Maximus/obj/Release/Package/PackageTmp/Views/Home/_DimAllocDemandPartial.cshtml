<div class="row">
    <div class="col-md-2 col-xs-2 col-sm-2 col-lg-2">
        <h4>Styles</h4>
        <ul class="nav nav-pills nav-stacked">
            
            @foreach (var item in Model)
            {
                Maximus.Models.e4kmaximusdbEntities entity = new Maximus.Models.e4kmaximusdbEntities();
                var desc = item.Contains(",") ? entity.getstylesviews.Where(x => x.StyleID == item.Substring(0, item.IndexOf(","))).FirstOrDefault().Description : entity.getstylesviews.Where(x => x.StyleID == item).FirstOrDefault().Description;
                <li><a onclick="getCard('@item');">@desc</a></li>
            }
        </ul>
    </div>
    <div class="col-md-10 col-xs-10 col-sm-10 col-lg-10" id="CardViewDiv">
       <center>
           Click on the Styles to see the Products!
       </center>
    </div>
</div>